<div class="top-visual">
  <div class="container clearfix">
      <div class="item" >
        <% @items.shuffle.first(15).each do |item| %>
          <%= link_to carts_path(item_id: item.id), method: :post, data: {confirm: "カートに追加しますか？"} do %>
            <%= attachment_image_tag item, :image, :fill, 180, 180, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
        <% end %>
      </div>

    <%= link_to root_path, class:"button-center" do %><div>もっとジャケットを見る</div><% end %>


  </div>
</div>
