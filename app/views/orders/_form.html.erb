<div class="modal-dialog">
  <div class="modal-content">

    <div class="container">
      <div class="row">
        <div class="col-xs-1">
        </div>

        <div  class="col-xs-10">
  	    <div class="title text-big">購入確認</div>

            <div class="box-info">
                  <u><div class="text-mid">送付先</div></u>
                    <p class= "text-small">宛名：<%= @shipment.shipment_name %></p>
                    <p class= "text-small">宛名（カナ）：<%= @shipment.shipment_name_kana %></p>
                    <p class= "text-small">郵便番号：<%= @shipment.shipment_postal_code %></p>
                    <p class= "text-small">送付先住所：<%= @shipment.shipment_address %></p>
            </div>

            <table class="table table">
                <thead>
                  <tr>
                    <th>商品情報</th>
                    <th>値段</th>
                    <th>数量</th>
                    <th>小計</th>
                  </tr>
                </thead>
                <tbody>
                <% @carts.each do |cart| %>
                  <tr>
                    <td><%= attachment_image_tag cart.item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                    <td>￥<%= cart.item.price %></td>
                    <td><%= cart.amount %>枚</td>
                    <td>￥<%= cart.item.price * cart.amount %></td>
                  </tr>
                </tbody>
                <% end %>
            </table>

            <div class="row">
              <div class="col-xs-6">
              </div>

              <div class="box-info col-xs-6">
                <u><div class="text-small">合計</div></u>
                <div class="text-mid">￥<%= @total_price %></div>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-4">
              </div>
              <div class="col-xs-4">
                  <div><%= form_tag orders_path, method: :post do %>
                      <%= hidden_field_tag :shipment_id, @shipment.id %>
                  <%= submit_tag "購入確定", class: "button" %>
                  <% end %>
                  </div>
              </div>
              <div class="col-xs-4">
                  <div><%= link_to "戻る", new_order_path, class: "button-danger" %>
                  </div>
              </div>
            </div>


        </div>

        <div class="col-xs-1">
        </div>

      </div>
    </div>

  </div>
</div>