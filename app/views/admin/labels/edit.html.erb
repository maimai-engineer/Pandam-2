<div class="container">
  <div class="row">
    <div class="col-10">
      <h2>レーベル編集</h2>
      <%= form_for(@label, url: admin_label_path, method: :patch) do |f| %>
        <div class="form-group">
          <label for="label">レーベル名</label>
          <%= f.text_field :label, id: "label", class: "form-control" %>
        </div>
        <%= f.submit "Update", class: "btn btn-info" %>
      <% end %>
      <%= link_to "Back", admin_labels_path %><br>
      <%= link_to "Delete", admin_label_path(@label.id), class: "btn btn-danger", data: {confirm: "本当に削除しますか？"}, method: :delete %>
    </div>
  </div>
</div>