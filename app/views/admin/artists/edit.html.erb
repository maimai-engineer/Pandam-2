<div class="container">
      <h2>アーティスト編集</h2>
      <%= form_for(@artist, url: admin_artist_path) do |f| %>
      <div class="form-group">
        <label for="artist">アーティスト名</label>
        <%= f.text_field :artist_name, id: "artist", class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="comment">一言コメント</label>
        <%= f.text_area :comment, id: "comment", class: "form-control" %>
      </div>
      <%= f.submit "Update", class: "btn btn-info" %>
      <% end %>
      <%= link_to "Back", admin_artists_path %><br>
      <%= link_to "Delete", admin_artist_path, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"}, method: :delete %>
</div>
