<div class="container">
  <h2>アーティスト新規作成</h2>
  <%= form_for(@artist, url: admin_artists_path, method: :post) do |f| %>
    <div class="form-group">
      <label for="artist">アーティスト名</label>
      <%= f.text_field :artist_name, id: "artist", class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="comment">一言コメント</label>
      <%= f.text_area :comment, id: "comment", class: "form-control" %>
    </div>
    <%= f.submit "Create",class: "btn btn-success" %>
  <% end %>
  <%= link_to "Back", admin_artists_path %><br>
</div>
